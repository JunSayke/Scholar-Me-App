<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/course_list_container_main"
    android:layout_width="250dp"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:background="@drawable/__aa_container_light_box"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/flashcardset_list_component"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/flashcardset_list_txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:text="flashcardset title"
            android:textColor="@color/primary_text_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/flashcardset_list_txt_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:text="flashcardset description"
            android:textColor="@color/secondary_text_color"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/flashcardset_list_btn_open"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="?android:selectableItemBackground"
        app:srcCompat="@drawable/__aa_btn_arrow_right" />


</LinearLayout>